@model RegisterShowcaseViewModel;
@{
    ViewData["Title"] = "Register Showcase";
}
<section class="user-input-content">
    <partial name="~/Views/Shared/Partials/_LocalPageNavPartial.cshtml" model="@ViewData["Title"]" />
    <div class="container">
        <div class="row">
            <div class="d-flex justify-content-center">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h2 class="text-info">@Model?.ConfirmationMessage</h2>

            </div>
            <div class="col-md-6">
                <form class="user-input-form" asp-controller="admin" asp-action="AddShowcase" method="post" novalidate>

                    <h6 class="user-input-title">Add showcase</h6>

                    <div class="user-input-item">
                        <label asp-for="Title" class="form-label"></label>
                        <input class="form-control" asp-for="Title" />
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="user-input-item">
                        <label asp-for="Ingress" class="form-label"></label>
                        <input class="form-control" asp-for="Ingress" />
                        <span asp-validation-for="Ingress"></span>
                    </div>
                    <div class="user-input-item">
                        <label asp-for="DeliveryText" class="form-label"></label>
                        <input class="form-control" asp-for="DeliveryText" />
                        <span asp-validation-for="DeliveryText"></span>
                    </div>
                    <div class="user-input-item">
                        <label asp-for="ButtonText" class="form-label"></label>
                        <input class="form-control" asp-for="ButtonText" />
                        <span asp-validation-for="ButtonText"></span>
                    </div>
                    <div class="user-input-item">
                        <label asp-for="ImageUrl" class="form-label"></label>
                        <input class="form-control" asp-for="ImageUrl" />
                        <span asp-validation-for="ImageUrl"></span>
                    </div>



                    <div class="user-button-content">

                        <button class="input-login-button" type="submit">Register Showcase</button>

                    </div>
                </form>
            </div>         
        </div>
    </div>
</section>