@model RegisterUserViewModel;
@{
    ViewData["Title"] = "Register";
}
<section class="user-input-content">
    <partial name="~/Views/Shared/Partials/_LocalPageNavPartial.cshtml" model="@ViewData["Title"]" />

    <div class="container">
        <form class="user-input-form" asp-controller="Register" asp-action="Index" method="post" novalidate>

            <h6 class="user-input-title">Register</h6>

            <div class="user-input-item">
                <input class="user-input" asp-for="FirstName" placeholder="Firstname" />
                <span asp-validation-for="FirstName"></span>
            </div>

            <div class="user-input-item">
                <input class="user-input" asp-for="LastName" placeholder="Lastname" />
                <span asp-validation-for="LastName"></span>
            </div>

            <div class="user-input-item">
                <input class="user-input" asp-for="Email" placeholder="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="user-input-item">
                <input class="user-input" asp-for="PhoneNumber" placeholder="PhoneNo" />
                <span asp-validation-for="PhoneNumber"></span>
            </div>

            <div class="user-input-item">
                <input class="user-input" asp-for="Password" placeholder="Password" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="user-input-item">
                <input class="user-input" asp-for="ConfirmPassword" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <div class="user-button-content">

                <button class="input-login-button" type="submit">Register</button>

            </div>
        </form>
    </div>
</section>